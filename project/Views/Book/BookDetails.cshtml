@model project.Models.BookModel

@{
    ViewData["Title"] = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BookDetails</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-3">
            Book ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookID)
        </dd>
        <dt class = "col-sm-3">
            Book Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class = "col-sm-3">
            Author
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookAuthor)
        </dd>
        <dt class = "col-sm-3">
            Genre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookGenreName)
        </dd>
        <dt class = "col-sm-3">
            Publishing Year
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookPublishYear)
        </dd>
        <dt class = "col-sm-3">
            Publisher
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookPublisherName)
        </dd>
        <dt class = "col-sm-3">
            Cover Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookCoverType)
        </dd>
        <dt class = "col-sm-3">
            Number of units
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookNumberOfUnits)
        </dd>
        <dt class = "col-sm-3">
            Number of units
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookNumberOfUnitsAvailable)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BookID }) |
    <a asp-action="Index">Back to List</a>
</div>

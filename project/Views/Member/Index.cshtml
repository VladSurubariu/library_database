@model IEnumerable<project.Models.MemberModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Member Name
            </th>
            <th>
                Member Adress
            </th>
            <th>
                Member Phone Number
            </th>
            <th>
                Member Email
            </th>
            <th>
                Membership Expiration Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberMembershipExpirationDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemberID }) |
                @Html.ActionLink("Details", "Details", new { id = item.MemberID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MemberID })
            </td>
        </tr>
}
    </tbody>
</table>
